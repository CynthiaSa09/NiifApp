<div class="card-deck mb-3 bg-danger text-dark">
  <% @posts.each do |post| %>
    <div class="card">
    <img src="<%= post.image_url %>", width='100', height='200' class="card-img-top" alt="<%=post.title %>">
    <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <p class="card-text"><%= post.content %></p>
    <p class="card-text"><small class="text-muted"><%= post.created_at%></small></p>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
  </div>
    </div>
    <% end %>
    </div>





