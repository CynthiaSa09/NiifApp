<div class="container text-center">
<form class="form-inline-center search-form" action="<%= search_niif_path(@niif) %>" method="GET" data-remote="true">
  <input class="form-control mr-sm-2" type="search" placeholder="Buscar" aria-label="Search" name="s">
  <button class="btn btn-outline-danger my-2 my-ms-5 " type="submit">Buscar</button>
    <div id="search-results">
      <ul class="results"></ul>
    </div>
</form>
</div>

<div class="container text-center">
<p>
  <strong>Nombre:</strong>
  <%= @niif.name %>
</p>

<p>
  <strong>Numero:</strong>
  <%= @niif.number %>
</p>
</div>

<div id="content" class="container">
<% @contents.map do |content| %>
<% if content.text.present? %>
  <%= render 'shared/tag_for', content: content, result_scope: 'niif' do %>
    <% if content.number.present? %>
    <%= "#{content.number}.-" %>
    <% end %>

    <%= content.text %>
  <% end %>
<% end %>
<% end %>
</div>
